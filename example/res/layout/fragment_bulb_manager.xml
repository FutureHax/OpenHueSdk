<com.t3hh4xx0r.hueopensdkexample.DashboardLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".BulbManagerActivity$DummySectionFragment" >

    <Button
        android:id="@+id/rename"
        style="@style/DashboardButton"
        android:text="Rename Bulb" />

   <Button
        android:id="@+id/on"
        style="@style/DashboardButton"
        android:text="Turn bulb on" />    

    <Button
        android:id="@+id/off"
        style="@style/DashboardButton"
        android:text="Turn bulb off" />

    <Button
        android:id="@+id/color_picker_sb"
        style="@style/DashboardButton"
        android:text="Color picker/w saturation and brightness" />

    <Button
        android:id="@+id/color_picker_s"
        style="@style/DashboardButton"
        android:text="Color picker/w saturation" />

    <Button
        android:id="@+id/color_picker_b"
        style="@style/DashboardButton"
        android:text="Color picker/w brightness" />

</com.t3hh4xx0r.hueopensdkexample.DashboardLayout>